<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="css/bootstrap.min.css" >
    <link rel="stylesheet" href="css/style.css">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head
<body>
    <form method="post" action="/addTodo" >
        <h2>Task list</h2>
        <span>
          <input autocomplete="off" type="text" placeholder="add task" name="todo" id="" />
          <button type="submit">Add</button>
          <!-- <input autocomplete="off" type="text" placeholder="filter task"  id="filterInput" /> -->
        </span>
        <span>
          
        </span>
        <ul class="list">
            <%todo.map((item)=>{%>
                <li style='background-color:<%=item.bg%>; color: <%=item.color%> !important; display:flex'>
                    <input name="<%=item._id%>" id="todo<%=item._id%>" readonly type="text" style="margin-right: auto;background-color: transparent; width: fit-content;border: none;" value="<%=item.todo%>"/>
                    <button id = "<%=item._id%>" type="button" onclick="editTodo('<%=item._id%>')" class="bg-transparent p-0" >
                        <i class="fas fa-pencil-alt bg-transparent text-white"></i>
                    </button>

                    <button formaction="/removeTodo/<%=item._id%>" class="bg-transparent p-0" >
                        <i class="fas fa-trash bg-transparent text-danger"></i>
                    </button>
                </li>
            <%})%>

        </ul>
      </form>
    <script src="js/script.js"></script>
      <script src='https://kit.fontawesome.com/a076d05399.js'></script>
    <script src="js/bootstrap.min.js"></script>

</body>
</html